<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
    </Border>
  </Design.PreviewWith>

  <Style Selector="Label.detailLabel">
	  <Setter Property="FontSize" Value="12"/>
      <Setter Property="FontWeight" Value="SemiBold"/>
      <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>

  <Style Selector="TextBlock.detailContent">
      <Setter Property="FontSize" Value="13"/>
      <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>

  <Style Selector="TextBlock.detailNumericContent">
      <Setter Property="FontSize" Value="13"/>
      <Setter Property="FontFamily" Value="Consolas"/>
      <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
      <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>
  
  <Style Selector="Border.divider">
      <Setter Property="Height" Value="1"/>
      <Setter Property="Background" Value="{DynamicResource DividerBrush}"/>
      <Setter Property="Margin" Value="0,6"/>
  </Style>

  <Style Selector="Button.openProjectFileButton">
      <Setter Property="HorizontalAlignment" Value="Stretch"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
      <Setter Property="Padding" Value="12,6"/>
      <Setter Property="Margin" Value="0,6,0,0"/>
      <Setter Property="CornerRadius" Value="4"/>
      <Setter Property="Background" Value="{DynamicResource OpenProjectFileBackgroundBrush}"/>
      <Setter Property="Foreground" Value="{DynamicResource OpenProjectFileForegroundBrush}"/>
      <Setter Property="BorderThickness" Value="1"/>
  </Style>
</Styles>
