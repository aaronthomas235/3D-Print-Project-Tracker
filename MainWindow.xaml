<Window x:Class="_3DPrintProjectTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3DPrintProjectTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu x:Name="ContextMenu" DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open"/>
                <MenuItem Header="_Close"/>
                <MenuItem Header="_Save"/>
            </MenuItem>
            <MenuItem Header="_Preferences">
                <MenuItem Header="_Theme"/>
            </MenuItem>
        </Menu>
        <Grid HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Content="Projects and Parts Viewer" Grid.Row="0" FontWeight="Bold" FontSize="16" />
            <Border BorderBrush="Black" BorderThickness="2" Margin="10" Grid.Row="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto"  HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Left" Grid.Row="1">
                    <StackPanel Margin="10" HorizontalAlignment="Left">
                        <Expander x:Name="Item_One_Expander" Margin="0,0,0,10" Cursor="Hand">
                            <Expander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Option 1" Grid.Column="0" VerticalAlignment="Center"/>
                                    <CheckBox Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                </Grid>
                            </Expander.Header>
                            <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                </Grid>
                                <TextBlock Text="Details about item 1" Grid.Column="0" VerticalAlignment="Center"/>
                                <CheckBox Grid.Column="1"/>
                            </StackPanel>
                        </Expander>

                        <Expander Margin="0,0,0,10">
                            <Expander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Option 2" Grid.Column="0" VerticalAlignment="Center"/>
                                    <CheckBox Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                </Grid>
                            </Expander.Header>
                            <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                <CheckBox/>
                                <TextBlock Text="Details about item 2." />
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </DockPanel>

</Window>
