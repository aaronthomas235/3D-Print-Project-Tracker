<Window x:Class="_3DPrintProjectTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3DPrintProjectTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Menu x:Name="ContextMenu" DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open"/>
                    <MenuItem Header="_Close"/>
                    <MenuItem Header="_Save"/>
                </MenuItem>
            </Menu>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button x:Name="NewDataBaseButton" Content="➕ New Project Tracker" FontWeight="Bold" FontFamily="Bookman Old Style" FontSize="20" Background="#FFDDDDDD" Cursor="Hand"></Button>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
