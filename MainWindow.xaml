<Window x:Name="MainProjectWindow" x:Class="_3DPrintProjectTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3DPrintProjectTracker"
        mc:Ignorable="d"
        Title="My 3D Print Project Tracker" Height="495" Width="500"
        Icon="/3D_Print_Project_Tracker.png"
        >
    <DockPanel>
        <Menu x:Name="ContextMenu" DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem x:Name="OpenProjectsFolderButton" Header="_Open" Command="{Binding OpenProjectsFolderCommand}" Cursor="Hand"/>
                <MenuItem x:Name="SaveButton" Header="_Save" Cursor="Hand"/>
            </MenuItem>
            <MenuItem Header="_Preferences">
                <MenuItem Header="_Theme"/>
            </MenuItem>
        </Menu>
        <Grid HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Content="Projects and Parts Viewer" Grid.Row="0" FontWeight="Bold" FontSize="16" />
            <Border BorderBrush="Black" BorderThickness="2" Margin="10" Grid.Row="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto"  HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Left" Grid.Row="1">
                    <StackPanel Margin="10" HorizontalAlignment="Left">
                        <ItemsControl ItemsSource="{Binding ExpanderItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Expander Margin="0,0,0,10" Cursor="Hand">
                                        <Expander.Header>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Title}" Grid.Column="0" VerticalAlignment="Center"/>
                                                <CheckBox IsChecked="{Binding IsChecked}" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                            </Grid>
                                        </Expander.Header>
                                        <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                                            <TextBlock Text="{Binding Description}" VerticalAlignment="Center"/>
                                            <CheckBox IsChecked="{Binding IsChecked}" Margin="10,0,0,0"/>
                                        </StackPanel>
                                    </Expander>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </DockPanel>

</Window>
